%div.page-header
  %h1 Listing My Tasks

= link_to 'New Task', new_task_path, :class => 'btn btn-success'

%table.table.table-hover
  %thead
    %tr
      %th Yesterday
      %th Today
      %th Impediments
      %th Task date
      %th Options

  %tbody
    -@tasks.each do |task|
      %tr
        %td= task.yesterday
        %td= task.today
        %td= task.impediments
        %td= task.task_date.strftime("%d/%m/%Y")
        %td
          %div.btn-group
            = link_to  'Show', task, :class => 'btn btn-info'
            = link_to 'Edit', edit_task_path(task), :class => 'btn btn-success'
            = link_to  'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'
