%div.page-header
	%h1.text-center Daily Manager

-if flash[:alert]
	%p#notice.text-center= flash[:alert]

%div.row
	%div.col-sm-6.col-md-4.col-md-offset-4

		%h2.form-signin-heading Please sign in

		= form_tag({:class => 'form-signin'}) do
					
			= label_tag :login, 'Login', class: 'sr-only'
			= text_field_tag :login, params[:login], class: 'form-control', placeholder: 'Login'
			= label_tag :password, 'Password', class: 'sr-only'
			= password_field_tag :password, params[:password], class: 'form-control', placeholder: 'Password'

			%hr

			= submit_tag "Login", class: 'btn btn-lg btn-primary btn-block'