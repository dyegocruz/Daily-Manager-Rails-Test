%div.page-header
  %h1 Listing Team Members

= link_to 'New Team Member', new_team_member_path, :class => 'btn btn-success'

%table.table.table-hover
  %thead
    %tr
      %th User
      %th Team
      %th Is leader
      %th #    

  %tbody
    -@team_members.each do |team_member|
      %tr
        %td= team_member.user_id
        %td= team_member.team_id
        %td= team_member.is_leader
        %td
          %div.btn-group 
            =link_to 'Show', team_member, :class => 'btn btn-info'
            = link_to 'Edit', edit_team_member_path(team_member), :class => 'btn btn-success'
            = link_to 'Destroy', team_member, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'
